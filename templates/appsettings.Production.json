{
  "ApplicationName": "ApiTemplate",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Graylog",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Span"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithProcessId",
      "WithProcessName",
      "WithEnvironmentName",
      "WithThreadId",
      "WithSpan"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Graylog",
        "Args": {
          "hostnameOrAddress": "addressOfGraylogProductionServer",
          "facility": "facilityName",
          "minimumLogLevel": "Information",
          "port": "9160",
          "transportType": "Udp",
          "host": "YourAppNameAsHostName"
        }
      }
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(RequestPath, '/swagger')"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(RequestPath, '/health')"
        }
      }
    ]
  }
}
